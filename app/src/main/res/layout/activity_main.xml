<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5" >

            <TextView
                android:id="@+id/Operation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="35sp"
                android:gravity="end"
                android:ellipsize="start"
                android:singleLine="true"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/Resault"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:ellipsize="end"
                android:textSize="25sp"
                android:singleLine="true"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="@style/btnStyle"
                android:text="C"
                />

            <Button
                android:id="@+id/Open"
                style="@style/btnStyle"
                android:text="(" />

            <Button
                android:id="@+id/Close"
                style="@style/btnStyle"
                android:text=")"

                />

            <Button
                android:id="@+id/Bp"
                style="@style/btnStyle"
                android:text="+" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/B1"
                style="@style/btnStyle"
                android:text="1" />

            <Button
                android:id="@+id/B2"
                style="@style/btnStyle"
                android:text="2" />

            <Button
                android:id="@+id/B3"
                style="@style/btnStyle"
                android:text="3" />

            <Button
                android:id="@+id/Bm"
                style="@style/btnStyle"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/B4"
                style="@style/btnStyle"
                android:text="4" />

            <Button
                android:id="@+id/B5"
                style="@style/btnStyle"
                android:text="5" />

            <Button
                android:id="@+id/B6"
                style="@style/btnStyle"
                android:text="6" />

            <Button
                android:id="@+id/Bc"
                style="@style/btnStyle"
                android:text="*" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/B7"
                style="@style/btnStyle"
                android:text="7" />

            <Button
                android:id="@+id/B8"
                style="@style/btnStyle"
                android:text="8" />

            <Button
                android:id="@+id/B9"

                style="@style/btnStyle"
                android:text="9" />

            <Button
                android:id="@+id/Bd"

                style="@style/btnStyle"
                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/Point"
                style="@style/btnStyle"

                android:text="." />

            <Button

                android:id="@+id/B0"

                style="@style/btnStyle"
                android:text="0" />

            <Button
                android:id="@+id/Del"
                style="@style/btnStyle"
                android:text="<-"
                />

            <Button
                android:id="@+id/Equal"
                style="@style/btnStyle"
                android:text="=" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>